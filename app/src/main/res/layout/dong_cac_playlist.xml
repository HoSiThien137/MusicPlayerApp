<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    app:cardCornerRadius="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout android:layout_margin="5dp"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/white">

        <ImageView
            android:scaleType="centerCrop"
            android:src="@color/ic_launcher_background"
            android:id="@+id/imageviewdanhsachplaylist"
            android:layout_width="180dp"
            android:layout_height="180dp"/>

        <TextView
            android:textColor="@color/black"
            android:maxWidth="200dp"
            android:textSize="20sp"
            android:text="Ten Album"
            android:ellipsize="end"
            android:maxLines="1"
            android:id="@+id/textviewtendanhsachplaylist"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="@color/grey"
            android:textSize="15sp"
            android:maxWidth="200dp"
            android:text="Noo Phuoc Thinh"
            android:ellipsize="end"
            android:maxLines="1"
            android:id="@+id/textviewtencasialbum"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
