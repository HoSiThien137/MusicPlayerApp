<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp">
    <ImageView
        android:scaleType="fitXY"
        android:layout_margin="3dp"
        android:id="@+id/imgSongSearch"
        android:layout_width="75dp"
        android:layout_height="75dp"
    />
    <TextView
        android:id="@+id/tvTenBaiHat"

        android:layout_toRightOf="@id/imgSongSearch"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="Ten bai hat"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:maxWidth="225dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvTenCaSi"
        android:layout_below="@id/tvTenBaiHat"
        android:layout_toRightOf="@id/imgSongSearch"
        android:textSize="15sp"
        android:textColor="#A5A5A5"
        android:text="Ten ca si"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="5dp"
        android:maxWidth="225dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/baseline_favorite_black"
        android:id="@+id/imgFavorite"
        android:layout_width="30dp"
        android:layout_height="30dp"/>
</RelativeLayout>